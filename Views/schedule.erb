

<div class='container'>

  <div class='columnA'>
    <H3>Begginer Schedule</H3>
    <div id='begSchedule'>
      <% @b_matches.each_with_index do |m,i| %>

        <div class='oponents_div'>
          <div class='oponents_wrapper'>
            <div class='oponents_name'>
              <%= m['participants'][0].split('@')[0] %>
              VS
              <%= m['participants'][1].split('@')[0] %>
            </div>
            <div class='oponent'>
              <img src=<%= grav(m['participants'][0]) %>>
            </div>
            <div class='oponent'>
              <img src=<%= grav(m['participants'][1]) %>>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

  <div class='columnB'>
    <H3>Int Schedule</H3>
    <div id='intSchedule'>
      <% @i_matches.each do |m| %>

        <div class='oponents_div'>
          <div class='oponents_wrapper'>
            <div class='oponents_name'>
              <%= m['participants'][0].split('@')[0] %>
              VS
              <%= m['participants'][1].split('@')[0] %>
            </div>
            <div class='oponent'>
              <img src=<%= grav(m['participants'][0]) %>>
            </div>
            <div class='oponent'>
              <img src=<%= grav(m['participants'][1]) %>>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
