<script type="text/javascript">
  week = 0
  $('#nextWeek').on('click', function(e) {
    week += 1;
    e.preventDefault();
    getSchedule(week);
  });

  $('#prevWeek').on('click', function(e) {
    week -= 1;
    e.preventDefault();
    getSchedule(week);
  });
</script>

