<link rel='stylesheet' href='/css/index.css' type='text/css'>
<script src='/javascript/jquery-2.1.0.min.js' type='text/javascript'></script>
<script src='/javascript/underscore-min.js' type='text/javascript'></script>
<script src='/javascript/index.js' type='text/javascript'></script>
<script src='/javascript/date.format.js' type='text/javascript'></script>


<div class='page'>
  <div class='container'>
    <div class='sections'>
      <div class='section header'>
        <h2>PlanGrid Ping Pong League</h2>
      </div>
      <div class='section schedule'>
        <%= erb(:schedule, :layout => false) %>
      </div>
      <div class='section standings'>
        <%= erb(:standings, :layout => false) %>
      </div>
      <div class='section prizes'>
        <h2>Prizes</h2>
        <br>
        <div class='prize'>
          <img  src="/images/philz.png">
        </div>
        <div class='prize'>
          <img  src="/images/livestrong.png">
        </div>
        <div class='prize'>
          <img  src="/images/mystery.png">
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  week = 0
  $('#nextWeek').on('click', function(e) {
    week += 1;
    e.preventDefault();
    getSchedule(week);
  });

  $('#prevWeek').on('click', function(e) {
    week -= 1;
    e.preventDefault();
    getSchedule(week);
  });
</script>

<script type="text/template" id='oponents'>
<div class='oponents_div'>
  <div class='oponents_wrapper'>
    <div class='oponent'>
      <img src={{ 'http://www.gravatar.com/avatar/' + $.md5(p1)}}>
    </div>
    <div class='oponent'>
      <img src={{ 'http://www.gravatar.com/avatar/' + $.md5(p2)}}>
    </div>
    <div class='footer'>
      <p>
        {{ capitaliseFirstLetter(p1.split('@')[0])}}
        vs
        {{ capitaliseFirstLetter(p2.split('@')[0])}}
      </p>
    </div>
  </div>
</div>
</script>

<script type="text/template" id='dateWeek'>
{{month}} {{w_open}} - {{w_close}}, {{year}}
</script>